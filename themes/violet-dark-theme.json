{
    "name": "My Purple Dark Theme",
    "type": "dark",
    "colors": {
        // EDITOR (área donde escribís código)
        "editor.background": "#000000", // Color de fondo del editor de código
        "editor.foreground": "#d4d4d4", // Color del texto principal en el editor
        "editorCursor.foreground": "#ffffff", // Color del cursor (barra que parpadea)
        "editor.lineHighlightBackground": "#2a2a2a", // Fondo de la línea donde está el cursor
        "editorLineNumber.foreground": "#858585", // Color de los números de línea (inactivos)
        "editorLineNumber.activeForeground": "#ffffff", // Color del número de línea actual (activa)
        "editor.selectionBackground": "#6C3FB2AA", // Color de fondo de texto seleccionado
        "editor.inactiveSelectionBackground": "#5A2F9D66", // Fondo de selección en editor inactivo (cuando otra pestaña está activa)
        "editorIndentGuide.background1": "#3a3a3a", // Color de las guías de indentación (líneas punteadas verticales)
        "editorIndentGuide.activeBackground1": "#6C3FB2", // Color de la guía de indentación activa
        "editorWhitespace.foreground": "#3a3a3a", // Color de los caracteres de espacio en blanco visibles (si los tenés activados)
        "editorBracketMatch.border": "#FFD700", // Color del borde cuando hacés match de un bracket ({}, [], ())
        "editorBracketMatch.background": "#6C3FB2", // Color de fondo cuando hacés match de un bracket

        // BARRA LATERAL Y UI (interfaz general de VS Code)
        "sideBar.background": "#1a0d2b", // Fondo de la barra lateral (donde está Explorer, Search, Git, etc.)
        "sideBar.foreground": "#d4d4d4", // Color del texto en la barra lateral
        "sideBarSectionHeader.background": "#291247", // Fondo de las secciones (Headers) en la barra lateral
        // BARRA DE ACTIVIDAD (barra vertical a la izquierda con íconos)
        "activityBar.background": "#291247", // Fondo de la barra de actividad
        "activityBar.foreground": "#ffffff", // Color de los íconos activos en la barra de actividad
        "activityBarBadge.background": "#6C3FB2", // Fondo de los badges (numeritos o avisos) en la barra de actividad
        "activityBarBadge.foreground": "#ffffff", // Color del texto de los badges
        // TABS DE ARCHIVOS (pestañas de archivos abiertos)
        "tab.activeBackground": "#1a0d2b", // Fondo de la pestaña activa
        "tab.inactiveBackground": "#12091e", // Fondo de las pestañas inactivas
        "tab.activeForeground": "#ffffff", // Color del texto en la pestaña activa
        "tab.inactiveForeground": "#a8a8a8", // Color del texto en las pestañas inactivas
        // STATUS BAR (barra inferior)
        "statusBar.background": "#291247", // Fondo de la barra de estado en modo normal
        "statusBar.foreground": "#ffffff", // Color del texto en la barra de estado
        "statusBar.debuggingBackground": "#a14ef5", // Fondo de la barra de estado cuando estás en modo debugging
        "statusBar.debuggingForeground": "#ffffff", // Color del texto de la barra en modo debugging
        // TITLE BAR (barra superior de la ventana)
        "titleBar.activeBackground": "#1a0d2b", // Fondo de la barra de título cuando la ventana está activa
        "titleBar.activeForeground": "#ffffff", // Color del texto de la barra de título activa
        "titleBar.inactiveBackground": "#12091e", // Fondo de la barra de título cuando está inactiva
        "titleBar.inactiveForeground": "#a8a8a8" // Color del texto de la barra de título inactiva
        ,
        "editorGroupHeader.tabsBackground": "#1a0d2b",
        "tab.border": "#a14ef5"
    },
    "tokenColors": [
        {
            "scope": "entity.name.tag",
            "settings": {
                "foreground": "#B57EDC",
                "fontStyle": "bold"
            }
        },
        {
            "scope": "entity.other.attribute-name",
            "settings": {
                "foreground": "#FFD700"
            }
        },
        {
            "scope": "string.quoted.double",
            "settings": {
                "foreground": "#FF85FF"
            }
        },
        {
            "scope": "text",
            "settings": {
                "foreground": "#FFFFFF"
            }
        },
        {
            "scope": "meta.tag.sgml.doctype",
            "settings": {
                "foreground": "#6C3FB2",
                "fontStyle": "italic"
            }
        },
        {
            "scope": "meta.tag.block.any",
            "settings": {
                "foreground": "#B57EDC"
            }
        },
        {
            "scope": "support.type.property-name",
            "settings": {
                "foreground": "#f3a6d6"
            }
        },
        {
            "scope": "constant.numeric",
            "settings": {
                "foreground": "#C4F6A7"
            }
        },
        {
            "scope": "support.constant.property-value",
            "settings": {
                "foreground": "#85E3FF"
            }
        },
        {
            "scope": "comment.block",
            "settings": {
                "foreground": "#7F9F7F",
                "fontStyle": "italic"
            }
        },
        {
            "scope": "punctuation.separator.key-value",
            "settings": {
                "foreground": "#ff26be"
            }
        },
        {
            "scope": "entity.other.attribute-name.pseudo-element",
            "settings": {
                "foreground": "#FF7F50"
            }
        },
        {
            "scope": "entity.other.attribute-name.pseudo-class",
            "settings": {
                "foreground": "#87CEFA"
            }
        },
        {
            "scope": "entity.other.attribute-name.class",
            "settings": {
                "foreground": "#FF69B4"
            }
        },
        {
            "scope": "punctuation.definition.entity",
            "settings": {
                "foreground": "#FF69B4"
            }
        },
        {
            "scope": "comment",
            "settings": {
                "foreground": "#7F9F7F",
                "fontStyle": "italic"
            }
        },
        {
            "scope": "keyword",
            "settings": {
                "foreground": "#B57EDC",
                "fontStyle": "bold"
            }
        },
        {
            "scope": "string",
            "settings": {
                "foreground": "#EFA2FF"
            }
        },
        {
            "scope": "variable",
            "settings": {
                "foreground": "#B0C9F8"
            }
        },
        {
            "scope": "constant.language",
            "settings": {
                "foreground": "#F47777"
            }
        },
        {
            "scope": "constant.character",
            "settings": {
                "foreground": "#FFDE8C"
            }
        },
        {
            "scope": "entity.name.function",
            "settings": {
                "foreground": "#FFDE8C"
            }
        },
        {
            "scope": "entity.name.type",
            "settings": {
                "foreground": "#88F1E0"
            }
        },
        {
            "scope": "storage",
            "settings": {
                "foreground": "#B57EDC",
                "fontStyle": "bold"
            }
        },
        {
            "scope": "punctuation",
            "settings": {
                "foreground": "#d4d4d4"
            }
        },
        {
            "scope": "meta.function-call",
            "settings": {
                "foreground": "#FFDE8C"
            }
        },
        {
            "scope": "invalid",
            "settings": {
                "foreground": "#ffffff"
            }
        },
        //json
        {
            "scope": "support.type.property-name.json",
            "settings": {
                "foreground": "#FFD700"
            }
        },
        {
            "scope": "string.quoted.double.json",
            "settings": {
                "foreground": "#EFA2FF"
            }
        },
        {
            "scope": "constant.numeric.json",
            "settings": {
                "foreground": "#C4F6A7"
            }
        },
        {
            "scope": "constant.language.json",
            "settings": {
                "foreground": "#F47777"
            }
        },
        {
            "scope": [
                "punctuation.separator.dictionary.json",
                "punctuation.definition.dictionary.begin.json",
                "punctuation.definition.dictionary.end.json"
            ],
            "settings": {
                "foreground": "#d4d4d4"
            }
        }
    ]
}